<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="kr.khs.studyfarm.login_process.agreement_bottomsheet.AgreementViewModel" />
        
        <variable
            name="termsData"
            type="kr.khs.studyfarm.login_process.agreement_bottomsheet.TermsData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/item_agreement_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={termsData.checked}"
            android:onClick="@{viewModel::onTermsItemCheckBoxClickListener}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <TextView
            android:id="@+id/item_agreement_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_agreement_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            app:termsRequired="@{termsData.required}"
            app:termsTitle="@{termsData.termsTitle}"
            tools:text="이용약관 타이틀" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>