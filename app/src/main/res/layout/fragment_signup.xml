<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="kr.khs.studyfarm.login_process.sign_up.SignupViewModel" />

        <variable
            name="sex"
            type="kr.khs.studyfarm.Gender" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login_process.sign_up.SignupFragment">

        <TextView
            android:id="@+id/signup_maintitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{viewModel.mainTitle}"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signup_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{viewModel.subTitle}"
            app:layout_constraintStart_toStartOf="@+id/signup_maintitle"
            app:layout_constraintTop_toBottomOf="@+id/signup_maintitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/signup_step1"
            android:padding="@dimen/padding"
            app:layout_constraintBottom_toTopOf="@+id/signup_btn_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_subtitle"
            android:visibility="@{viewModel.stepVisibility[0]}">
            <RadioButton
                android:id="@+id/signup_radio_terms1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="필수 약관동의1"
                android:checked="@={viewModel.necessaryCheck[0]}"/>

            <RadioButton
                android:id="@+id/signup_radio_terms2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="필수 약관동의2"
                android:checked="@={viewModel.necessaryCheck[1]}" />

            <RadioButton
                android:id="@+id/signup_radio_terms3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="필수 약관동의3"
                android:checked="@={viewModel.necessaryCheck[2]}" />

            <RadioButton
                android:id="@+id/signup_radio_terms4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선택 약관동의1"
                android:checked="@={viewModel.optionalCheck[0]}"/>

            <RadioButton
                android:id="@+id/signup_radio_terms5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선택 약관동의2"
                android:checked="@={viewModel.optionalCheck[1]}" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signup_step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            app:layout_constraintBottom_toTopOf="@+id/signup_btn_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_subtitle"
            android:visibility="@{viewModel.stepVisibility[1]}">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signup_et_nickname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="별명"
                    android:text="@={viewModel.nickname}"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/step2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="지역"
                app:layout_constraintStart_toStartOf="@+id/signup_et_nickname"
                app:layout_constraintTop_toBottomOf="@+id/signup_et_nickname" />

            <Spinner
                android:id="@+id/signup_spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/step2_1"
                app:layout_constraintTop_toBottomOf="@+id/step2_1" />

            <Spinner
                android:id="@+id/signup_spinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/signup_spinner1"
                app:layout_constraintStart_toEndOf="@+id/signup_spinner1"
                app:layout_constraintTop_toTopOf="@+id/signup_spinner1" />

            <TextView
                android:id="@+id/step2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="관심 스터디"
                app:layout_constraintStart_toStartOf="@+id/signup_spinner1"
                app:layout_constraintTop_toBottomOf="@+id/signup_spinner1" />

            <Spinner
                android:id="@+id/signup_spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/step2_2"
                app:layout_constraintTop_toBottomOf="@+id/step2_2" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signup_et_studypurpose"
                android:layout_marginVertical="@dimen/vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup_spinner3">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="스터디 목적(선택사항)"
                    android:text="@={viewModel.studyPurpose}"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signup_et_serviceway"
                android:layout_marginVertical="@dimen/vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup_et_studypurpose">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="서비스 유입 경로(선택사항)"
                    android:text="@={viewModel.serviceWay}"/>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/signup_step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:visibility="@{viewModel.stepVisibility[2]}"
            app:layout_constraintBottom_toTopOf="@+id/signup_btn_next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_subtitle">

            <ImageView
                android:id="@+id/signup_iv_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@android:mipmap/sym_def_app_icon" />

            <EditText
                android:id="@+id/signup_et_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:hint="소개글을 입력하세요.\n최대 두줄까지 쓸 수 있어요."
                android:maxLines="2"
                android:text="@={viewModel.introduce}"
                app:layout_constraintBottom_toBottomOf="@+id/signup_iv_profile"
                app:layout_constraintStart_toEndOf="@+id/signup_iv_profile"
                app:layout_constraintTop_toTopOf="@+id/signup_iv_profile" />

            <TextView
                android:id="@+id/step3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="성별"
                app:layout_constraintStart_toStartOf="@+id/signup_iv_profile"
                app:layout_constraintTop_toBottomOf="@+id/signup_iv_profile" />

            <TextView
                android:id="@+id/step3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="생년월일"
                app:layout_constraintStart_toStartOf="@+id/signup_iv_profile"
                app:layout_constraintTop_toBottomOf="@+id/singup_radiogroup_sex" />

            <TextView
                android:id="@+id/step3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="이해도 및 숙련도"
                app:layout_constraintStart_toStartOf="@+id/signup_iv_profile"
                app:layout_constraintTop_toBottomOf="@+id/signup_datepicker" />

            <RadioGroup
                android:id="@+id/singup_radiogroup_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/step3_1"
                app:layout_constraintTop_toBottomOf="@+id/step3_1">

                <RadioButton
                    android:id="@+id/signup_sex_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남성"
                    android:checked="@{viewModel.gender.equals(sex.Man)}"
                    android:onClick="@{() -> viewModel.selectGender(sex.Man)}"/>

                <RadioButton
                    android:id="@+id/signup_sex_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여성"
                    android:checked="@{viewModel.gender.equals(sex.Woman)}"
                    android:onClick="@{() -> viewModel.selectGender(sex.Woman)}"/>
            </RadioGroup>


            <DatePicker
                android:id="@+id/signup_datepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/signup_iv_profile"
                app:layout_constraintTop_toBottomOf="@+id/step3_2"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:year="@={viewModel.year}"
                android:month="@={viewModel.month}"
                android:day="@={viewModel.day}"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/signup_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:onClick="@{() -> viewModel.onNextBtnClicked()}"
            android:text="다음"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/signup_btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음에 할래요."
            android:visibility="@{viewModel.stepVisibility[2]}"
            android:onClick="@{() -> viewModel.onNextBtnClicked()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_btn_next" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>